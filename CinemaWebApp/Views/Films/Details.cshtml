@model CinemaWebApp.Models.Film

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Film Detaljer</h1>

<div class="card">
    <div class="card-header bg-info text-white">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Titel</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Beskrivning</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Längd</dt>
            <dd class="col-sm-9">@Model.Length minuter</dd>

            <dt class="col-sm-3">Pris</dt>
            <dd class="col-sm-9">@Model.Price kr</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Redigera</a>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka till listan</a>
</div>
