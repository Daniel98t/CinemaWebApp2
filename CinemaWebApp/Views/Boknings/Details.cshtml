@model CinemaWebApp.Models.Bokning

@{
    ViewData["Title"] = "Detaljer om bokning";
}

<h1>Bokningsdetaljer</h1>

<div class="card mt-4">
    <div class="card-header">
        <h2>Film: @Model.Föreställning.Film.Title</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Salong:</dt>
            <dd class="col-sm-8">@Model.Föreställning.Salong.Number</dd>

            <dt class="col-sm-4">Tid:</dt>
            <dd class="col-sm-8">@Model.Föreställning.Time.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-4">Platsnummer:</dt>
            <dd class="col-sm-8">@Model.SeatNumber</dd>

            <dt class="col-sm-4">Bokningsnummer:</dt>
            <dd class="col-sm-8">@Model.BookingNumber</dd>

            <dt class="col-sm-4">Kundnamn:</dt>
            <dd class="col-sm-8">@Model.CustomerName</dd>

            <dt class="col-sm-4">E-post:</dt>
            <dd class="col-sm-8">@Model.CustomerEmail</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Search" class="btn btn-secondary">Tillbaka</a>
</div>
